<?xml version="1.0" encoding="utf-8"?>

<com.warkiz.widget.IndicatorStayLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/guideline3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:paddingHorizontal="@dimen/medium_space">

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isb_indicator_color="@color/red_500"
        app:isb_indicator_text_color="@color/white"
        app:isb_indicator_text_size="@dimen/font_headline"
        app:isb_max="100"
        app:isb_min="0"
        app:isb_progress="25"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="circular_bubble"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/red_500"
        app:isb_thumb_size="@dimen/large_space"
        app:isb_tick_marks_size="@dimen/medium_space"
        app:isb_tick_texts_color="@color/blue_500"
        app:isb_tick_texts_size="@dimen/font_headline"
        app:isb_ticks_count="2"
        app:isb_progress_value_float = "true"
        app:isb_track_background_color="@color/gray_200"
        app:isb_track_background_size="@dimen/min_space"
        app:isb_track_progress_color="@color/blue_500"
        app:isb_track_progress_size="@dimen/min_space" />
</com.warkiz.widget.IndicatorStayLayout>